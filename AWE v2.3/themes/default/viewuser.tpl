<div class="content-container">
	<div class="content-title">Профиль пользователя {username}</div>
	<div class="content-text viewuser">
		<div id="main">
			<div style="width: 100%;" class="main">
				<div class="well left">
					<div class="field">
						<label>Имя:</label>
						<b>{name}</b>
					</div>
					<div class="field">
						<label>Логин:</label>
						<b>{username}</b>
					</div>
					<div class="field">
						<label>Группа пользователя:</label>
						<b>{group}</b>
					</div>
				</div>
				<div class="well right">
					[referal]<div class="field">
						<label>Был приглашен:</label>
						<b>{referal}</b>
					</div>[/referal]
					<div class="field">
						<label>Дата регистрации:</label>
						<b>{regdate}</b>
					</div>
					<div class="field">
						<label>Последний визит:</label>
						<b>{lastdate}</b>
					</div>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</div>